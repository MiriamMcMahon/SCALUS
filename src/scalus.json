{
  "protocols": [
    {
      "protocol": "rdp",
      "appid": "windows-rdp"
    },
    {
      "protocol": "ssh",
      "appid": "mycustom-ssh"
    }
  ],
  "applications": [
    {
      "id": "windows-rdp",
      "description": "Windows RDP Client",
      "name": "Windows RDP Client",
      "platforms": [ "windows" ],
      "protocol": "rdp",
      //Use the builtin rdp parser
      "parser": {
        "id": "rdp",
        "options": [ "waitForInputIdle" ],
        //Generate a temporary template file, with default settings for MS RDP
        "UseDefaultTemplate": true,
        //Use a local command to customise the generated file before running the application
        "PostProcessingExec": "C:/program files/git/usr/bin/perl.exe",
        "PostProcessingArgs": [ "%HOME%/pluggable.pl" ]

      },
      "exec": "C:\\windows\\system32\\mstsc.exe",
      "args": [ "%GeneratedFile%" ]
    },
    {
      "id": "windows-rdp-withtemplate",
      "description": "Windows RDP Client",
      "name": "Windows RDP Client with template",
      "platforms": [ "windows" ],
      "protocol": "rdp",
      //Use the builtin rdp parser
      "parser": {
        "id": "rdp",
        // Provide a template, which is copied to a temporary file, identified by %GeneratedFile%,
        "UseTemplateFile": "%HOME%\\scalus\\mstemplate.rdp",
        "options": [ "waitForInputIdle" ]
      },
      "exec": "C:\\windows\\system32\\mstsc.exe",
      "args": [ "%GeneratedFile%" ]
    },

    {
      "id": "freerdp",
      "description": "FreeRDP",
      "name": "FreeRDP",
      "platforms": [ "unix" ],
      "protocol": "rdp",
      //Use the builtin rdp parser
      "parser": {
        "id": "rdp",
        "options": []
      },
      "exec": "/usr/bin/xfreerdp",
      "args": [ "/u:%User%", "/v:%host%:%Port%", "/p:Safeguard" ]
    },
    {
      "id": "custom_rdp",
      "description": "My custom Rdp handler",
      "name": "CustomRDP",
      "platforms": [ "unix" ],
      "protocol": "rdp",
      //Use the builtin rdp parser
      "parser": {
        "id": "rdp",
        "options": [ "waitforexit" ],
        // Provide a template, which is copied to a temporary file, identified by %GeneratedFile%,
        "UseTemplateFile": "%HOME%/Mycustomtemplate.myextension"
      },
      "exec": "/usr/bin/mycustomApp",
      "args": [ "%GeneratedFile%" ]

    },
    {
      "id": "windows-openssh",
      "description": "Windows OpenSSH",
      "name": "Windows OpenSSH",
      "platforms": [ "windows" ],
      "protocol": "ssh",
      //Use the builtin ssh parser
      "parser": {
        "id": "ssh",
        "options": []
      },
      "exec": "C:\\windows\\system32\\cmd.exe",
      "args": [ "/c", "C:\\Windows\\System32\\OpenSSH\\ssh.exe", "%User%@%Host%" ]
    },

    {
      "id": "gnome-terminal-ssh",
      "name": "Gnome Terminal SSH",
      "description": "Open Gnome Terminal on Linux with the SSH connection information",
      "platforms": [ "linux" ],
      "protocol": "ssh",
      //Use the builtin ssh parser
      "parser": {
        "id": "ssh",
        "options": []
      },
      "exec": "gnome-terminal",
      "args": [ "-x", "ssh", "-t", "%User%@%Host%" ]
    },

    {
      "id": "mac-ssh",
      "name": "MAC TerminalSSH",
      "description": "Open Terminal on Mac OS with the SSH connection information",
      "platforms": [ "mac" ],
      "protocol": "ssh",
      //Use the builtin ssh parser
      "parser": {
        "id": "ssh",
        "options": ["waitforexit"]
      },
      "exec": "/usr/bin/open",
      "args": [ "-b", "com.apple.terminal", "%OriginalURL%" ]
    },
    {
      "id": "mac-rdp",
      "name": "Mac RDP",
      "description": "Run MS Windows RDP on MAC",
      "platforms": [ "mac" ],
      "protocol": "rdp",
      //Use the builtin ssh parser
      "parser": {
        "id": "rdp",
        "options": [ "wait:60" ]
      },
      "exec": "/usr/bin/open",
      "args": [
        "-nb",
        "com.microsoft.rdc.macos",
        "%GeneratedFile%"
      ]
    },

    {
      "id": "putty-ssh",
      "description": "Putty client",
      "name": "Putty",
      "platforms": [ "windows" ],
      "protocol": "ssh",
      //Use the builtin ssh parser
      "parser": {
        "id": "ssh",
        "options": []
      },
      "exec": "C:\\windows\\system32\\cmd.exe",
      "args": [ "/c", "C:\\Program Files\\PuTTY\\putty.exe", "-ssh", "%user%@%host%" ]
    },
    {
      "id": "putty-telnet",
      "description": "Putty client",
      "name": "Putty Telnet",
      "platforms": [ "windows" ],
      "protocol": "telnet",
      //Use the builtin ssh parser
      "parser": {
        "id": "telnet",
        "options": []
      },
      "exec": "C:\\windows\\system32\\cmd.exe",
      "args": [ "/c", "C:\\Program Files\\PuTTY\\putty.exe", "-telnet", "%user%@%host%" ]
    },
    {
      "id": "mycustom-url",
      "description": "Use a custom application on ubuntu",
      "name": "MyCustomSshHandler",
      "platforms": [ "unix" ],
      "protocol": "custom",
      //Use the builtin url parser, which will handle any valid standard URL
      "parser": {
        "id": "url",
        "UseTemplateFile": "mycustomconfig.ssh",
        "options": [ "waitforexit" ]
      },
      "exec": "/usr/bin/MyCustomApp",
      "args": [ "%GeneratedFile%" ]
    },
    {
      "id": "remmina-rdp",
      "description": "Use remmina client on linux",
      "name": "remmina Rdp client",
      "platforms": [ "unix" ],
      "protocol": "rdp",
      //Use the builtin url parser, which will handle any valid standard URL
      "parser": {
        "id": "rdp",
        "UseTemplateFile": "%HOME%/.scalus/remmina.rdp",
        "options": [ "waitforexit" ]
      },
      "exec": "/usr/bin/remmina",
      "args": [ "%GeneratedFile%" ]
    },
    {
      "id": "remmina-ssh",
      "description": "Use remmina client on ubuntu",
      "name": "remmina SSH client",
      "platforms": [ "unix" ],
      "protocol": "ssh",
      //Use the builtin url parser, which will handle any valid standard URL
      "parser": {
        "id": "ssh",
        "UseTemplateFile": "%HOME%/.scalus/remmina.ssh",
        "options": [ "waitforexit" ]
      },
      "exec": "/usr/bin/remmina",
      "args": [ "%GeneratedFile%" ]
    }
  ]
}
